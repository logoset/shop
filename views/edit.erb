<div style="margin: auto; width: 90%">
  <%= if @product && @product!="" then "<h3>Изменение товара:</h3>" else "<h3>Добавление нового товара:</h3>" end %>
  <form id="select" action="/admin" method="post">
  <fieldset>
  <legend>Выберите товар из списка:</legend>
    <input id="action" type="hidden" name="action" value="">

      Список товаров:<br>
      <select name="product" onchange="this.form.submit()">
        <option value="">***-=Добавить новый товар=-***</option>
        <% @db.uniq.each do |item| %>
        <option value="<%= item['id'] %>" <%= "selected" if item['id']==@product.to_i %>><%= "#{item['name'][0, 70]}..." %></option>
        <% end %>
      </select>
      <<<a href="" onclick="document.getElementById('action').value='delproduct';document.forms['select'].submit();"><button>Удалить этот товар</button></a>

  </fieldset>
  </form>

  <form action="/admin" method="post" accept-charset="utf-8" enctype="multipart/form-data">
    <fieldset>
      <legend><b>Товар:</b></legend>
      <% item=[];cat=[] %>
      <% item=@db.select {|elem| elem['id'].to_i==@product.to_i}.uniq[0] if @product && @product!="" %>
      <% cat=@db.map {|x| x['category'] }.uniq %>
      <input type="hidden" name="action" value="<%= if @product && @product!="" then 'edit' else 'add' end %>">
      <input type="hidden" name="id" value="<%= @product if @product && @product!="" %>">
      Название:<br>
      <input type="text" name="name" value="<%= item['name'] if @product && @product!="" %>" size=70><br>
      Категория:<br>
      <% z=item['category']['category_id'] if @product && @product!="" %>
      <select name="category">
        <% cat.each do |y| %>
        <option value="<%= y['category_id'] %>" <%= "selected" if @product && @product!="" && y['category_id']== z %>><%= y['name'] %></option>
        <% end %>
      </select>
      или новая категория: -> <input type="text" name="newcat" value=""><br>
      Описание товара:<br>
      <textarea name="desc" rows=5 cols=72><%= item['description'] if @product && @product!="" %></textarea><br>
      Количество:<br>
      <input type="text" name="count" value="<%= item['count'] if @product && @product!="" %>" size=4><br>
      Цена:<br>
      <input type="text" name="price" value="<%= item['price'] if @product && @product!="" %>" size=8><br>
      <div style="margin: 20px;">
        <%= if @product && @product!="" then "Заменить эту картинку?" else "Картинка" end %>
        <% if @product && @product!="" && item['image'] !="" %>
        <div>
          <img src="/<%= item['image'] if @product && @product!="" %>" alt="" height="100px">
        </div>
        <% end %>
      </div>
      <fieldset>
        <legend>выберите что-то одно - файл или URL-адрес</legend>
        url:&nbsp;&nbsp;&nbsp;&nbsp; <input type="text" name="urlpic" value="">
        или файл <input type="file" name="filepic" placeholder="Выберите файл картинки для товара">
      </fieldset><br><br>
      <input type="submit" name="submit" value='<%= if @product && @product!="" then "Изменить" else "Добавить" end %>'>
      <a href="#" onclick="this.form.submit(); return false"><button><%= if @product && @product!="" then "Изменить" else "Добавить" end %></button></a><a href="#" onclick="return window.location='/'"><button>Выход</button></a>
    </fieldset>
  </form>
</div>

